{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": false
    }
  },
  "env": {
    "es6": true,
    "jquery": true
  },
  "extends": ["plugin:react/all", "airbnb"],
  "plugins": ["react", "class-property", "flow-vars"],
  "rules": {
    "arrow-body-style": ["warn", "as-needed"],
    "arrow-parens": "off",
    "comma-dangle": ["error", "never"],

    "global-require": "off",
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "max-len": ["error", 120, { "ignoreUrls": true }],
    "new-cap": "off",
    "newline-per-chained-call": "off",
    "no-case-declarations": "off",
    "no-confusing-arrow": "off",
    "no-console": "off",
    "no-param-reassign": "off",
    "no-template-curly-in-string": "off",
    "no-trailing-spaces": "off",
    "no-underscore-dangle": "off",
    "no-unused-expressions": ["error", { "allowShortCircuit": true, "allowTernary": true }],
    "no-unused-vars": ["error", { "argsIgnorePattern": "meta" }],
    "no-use-before-define": "off",
    "object-curly-spacing": "off",
    "quote-props": "off",
    "semi": ["warn", "never"],

    "react/button-has-type": "off",
    "react/jsx-boolean-value": "error",
    "react/jsx-max-depth": "off",
    "react/jsx-curly-spacing": ["error", "never"],
    "react/jsx-filename-extension": "off",
    "react/jsx-indent": ["error", 2],
    "react/jsx-indent-props": ["error", 2],
    "react/jsx-key": "error",
    "react/jsx-no-duplicate-props": "error",
    "react/jsx-space-before-closing": "off",
    "react/no-array-index-key": "off",
    "react/no-did-mount-set-state": "off",
    "react/no-did-update-set-state": "error",
    "react/no-unescaped-entities": "off",
    "react/no-unused-prop-types": "error",
    "react/prefer-es6-class": "error",
    "react/prop-types": ["error", { "ignore": ["meta"] }],
    "react/forbid-prop-types": "off",
    "react/require-default-props": "off",
    "react/no-string-refs": "off",
    "react/destructuring-assignment": "off",
    "react/no-access-state-in-setstate": "off",
    "react/sort-comp": "off",
    "react/jsx-one-expression-per-line": "off",

    "no-plusplus": "off",

    "flow-vars/define-flow-type": 1,
    "flow-vars/use-flow-type": 1,

    "import/no-extraneous-dependencies": "off",
    "import/no-unresolved": "off",
    "import/extensions": ["error", { "jsx": "never", "json": "always" }],
    "import/prefer-default-export": "off",

    "jsx-a11y/anchor-has-content": "off",
    "jsx-a11y/href-no-hash": "off",
    "jsx-a11y/img-has-alt": "off",
    "jsx-a11y/media-has-caption": "off",
    "jsx-a11y/no-autofocus": "off",
    "jsx-a11y/no-static-element-interactions": "off"
  },
  "globals": {
    "$dirname": true,
  }
}
